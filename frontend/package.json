{
  "type": "module",
  "dependencies": {
    "@googlemaps/markerclusterer": "^2.5.1",
    "@vis.gl/react-google-maps": "latest",
    "dotenv": "^16.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.4"
  },
  "main": "electron.js",
  "scripts": {
    "start": "vite",
    "start-electron": "vite & electron .",
    "build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.example.yourapp",
    "productName": "Your App",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5"
  }
}
